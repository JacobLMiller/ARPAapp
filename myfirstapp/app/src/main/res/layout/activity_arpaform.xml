<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_alignWithParentIfMissing="false"
    android:layout_alignParentTop="true"
    android:orientation="vertical">

    <TextView
        android:id="@+id/siteName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text= ""
        android:layout_marginHorizontal="0dp"
        android:textSize="25dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/site_form_page"
        android:layout_marginHorizontal="30dp"
        android:textSize="50dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginVertical="0dp">

    <Button
        android:id="@+id/btnClose"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/my_button_bg"
        android:onClick="actionClose"
        android:text="@string/button_cancel" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_marginHorizontal="50dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_weight="1"
            android:text="Tap Again for Camera"
            android:visibility="invisible"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginVertical="0dp">

        <Button
        android:id="@+id/btnPhoto"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/my_button_bg"
        android:onClick="actionPhoto"
        android:text="@string/button_photo" />

        <Button
            android:id="@+id/btnDltPhoto"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/my_button_bg"
            android:onClick="actionDltPhoto"
            android:text="@string/button_dltPhoto" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:layout_marginVertical="50dp">

        <Button
        android:id="@+id/btnForm"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
            android:background="@drawable/my_button_bg"
        android:text="@string/button_sitecond" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">

    <Button
        android:id="@+id/btnSubmit"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:background="@drawable/my_button_bg"
        android:onClick="actionSubmit"
        android:text="@string/button_submit" />
    </LinearLayout>

    <FrameLayout
        android:id="@+id/camera_preview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone"
        android:layout_weight="1" />


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal"
        android:visibility="gone">
        <Button
            android:id="@+id/flash"
            android:text="Flash"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"/>
        <Button
            android:id="@+id/switchCamera"
            android:text="Switch Camera"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:visibility="gone" />
        <Button
            android:id="@+id/takePicture"
            android:text="Take Picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:layout_weight="1"/>
    </LinearLayout>

    <ImageView
        android:id="@+id/imageARPA"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:visibility="visible"
        app:srcCompat="@drawable/usace" />
    <ImageView
        android:id="@+id/imageARPA_hidden"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingVertical="20dp"
        android:visibility="gone"
        app:srcCompat="@drawable/usace" />

</LinearLayout>